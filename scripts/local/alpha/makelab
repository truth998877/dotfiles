#!/bin/bash

#labnet details
declare -A networks

networks["labnet"]=$(cat << EOF
<network>
  <name>labnet</name>

  <!-- No <forward> block â†’ fully isolated, no host access -->
  <bridge name="virbr-lab" stp="on" delay="0"/>

  <!-- Internal addressing for lab VMs -->
  <ip address="192.168.60.1" netmask="255.255.255.0">
    <dhcp>
      <range start="192.168.60.2" end="192.168.60.254"/>
    </dhcp>
  </ip>
</network>
EOF
)

#attacker net details
networks["attackernet"]=$(cat << EOF
<network>
  <name>attackernet</name>
  <bridge name="virbr-att" stp="on" delay="0"/>
  <!-- <forward mode="nat"/> -->
  <ip address="192.168.50.1" netmask="255.255.255.0">
    <dhcp>
      <range start="192.168.50.2" end="192.168.50.254"/>
    </dhcp>
  </ip>
</network>
EOF
)



#create networks
index=0
networknames=("${!networks[@]}")
for network in "${networks[@]}";do
	networkname="${networknames["$index"]}"
  echo $network > "$networkname".xml  #get file name from networkname
	sudo virsh net-define "$networkname".xml
  sudo virsh net-start "$networkname"
  sudo virsh net-autostart "$networkname"
	((index++))
done

#create machines
echo "creating machines..."

if [[ ! -d "$HOME"/buglab/images ]]; then
  mkdir -p "$HOME"/buglab/images
fi


echo -e "Getting images...\n"

#if [[ ! -f "$HOME"/buglab/images/ubuntu-24.04-server-cloudimg-amd64.img ]]; then
#
#  curl -L -o "$HOME"/buglab/images/ubuntu-24.04-server-cloudimg-amd64.img \
#   https://cloud-images.ubuntu.com/releases/24.04/release/ubuntu-24.04-server-cloudimg-amd64.img
#
#fi
#
#if [[ ! -f "$HOME"/buglab/images/kali-2025.4-cloud-amd64.tar.xz ]]; then
# 
#  curl -L -o "$HOME"/buglab/images/kali-2025.4-cloud-amd64.tar.xz \
#   https://kali.download/cloud-images/kali-2025.4/kali-linux-2025.4-cloud-genericcloud-amd64.tar.xz
#
#  tar -xJf "$HOME"/buglab/images/kali-2025.4-cloud-amd64.tar.xz
#
#
#fi

discsizes=(40 40 40 20 20 40 40 80 20 60 20 40)
ramsizes=(8192 4096 3072 2048 2048 1024 2048 4096 2048 4096 1024 4096)
numcpus=(4 2 2 1 1 1 2 2 1 2 1 2)
boottype=("uefi" "" "" "" "" "" "" "" "" "" "" "")

#username and ssh key
username=tony
sshkey=$(<~/.ssh/id_ed25519.pub)

#machine list
machines=( \
"kaliattacker"  \
"ansible"  \
"webvulnphp"  \
"juiceshop"  \
"webgoat"  \
"minio"  \
"localstack"  \
"k3s"  \
"legacy"  \
"opensearch"  \
"mail"  \
"tri-nic" \
)


#machine details
declare -A yaml_files

yaml_files["${machines[0]}"]=$(cat << EOF 
#cloud-config
hostname: kali-attacker
users:
  - name: "$username"
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    shell: /bin/bash
    ssh_authorized_keys:
      - "$sshkey"

package_update: true
package_upgrade: true
packages:
  - wget
  - curl
  - git
  - python3
  - python3-pip
  - net-tools

write_files:
  - path: /usr/local/bin/install-kali-tools.sh
    permissions: '0755'
    content: |
      #!/usr/bin/env bash
      set -euo pipefail
      export DEBIAN_FRONTEND=noninteractive
      apt-get update -y
      apt-get install -y kali-linux-default nmap ffuf gobuster amass sqlmap
      echo "Kali tools installed"

runcmd:
  - [ sh, -c, "/usr/local/bin/install-kali-tools.sh >> /var/log/provision.log 2>&1 || true" ]
  - [ sh, -c, "echo 'Provisioning complete for kali-attacker' >> /var/log/provision.log" ]


EOF
)


yaml_files["${machines[1]}"]=$(cat << EOF 
#cloud-config
hostname: ansible
users:
  - name: "$username"
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    shell: /bin/bash
    ssh_authorized_keys:
      - "$sshkey"

ssh_pwauth: True
chpasswd:
  list: |
    tony:password
  expire: False

package_update: true
package_upgrade: true
packages:
  - python3
  - python3-venv
  - python3-pip
  - git
  - curl

write_files:
  - path: /usr/local/bin/bootstrap-ansible.sh
    permissions: '0755'
    content: |
      #!/usr/bin/env bash
      set -euo pipefail
      export DEBIAN_FRONTEND=noninteractive
      apt-get update -y
      apt-get install -y python3-venv python3-pip git
      python3 -m venv /home/"$username"/ansible-venv
      /home/"$username"/ansible-venv/bin/pip install --upgrade pip ansible
      chown -R "$username":USERNAME_PLACEHOLDER /home/USERNAME_PLACEHOLDER
      echo "Ansible bootstrapped"

runcmd:
  - [ sh, -c, "/usr/local/bin/bootstrap-ansible.sh >> /var/log/provision.log 2>&1 || true" ]
  - [ sh, -c, "echo 'Provisioning complete for ansible' >> /var/log/provision.log" ]


EOF
)


yaml_files["${machines[2]}"]=$(cat << EOF 
#cloud-config
hostname: web-vuln-php
users:
  - name: "$username"
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    shell: /bin/bash
    ssh_authorized_keys:
      - "$sshkey"

package_update: true
package_upgrade: true
packages:
  - apt-transport-https
  - ca-certificates
  - curl
  - gnupg
  - lsb-release
  - docker.io
  - docker-compose

write_files:
  - path: /opt/vuln/docker-compose.yml
    permissions: '0644'
    content: |
      version: '3'
      services:
        dvwa:
          image: vulnerables/web-dvwa:latest
          ports:
            - "80:80"
          restart: always
        bwapp:
          image: raesene/bwapp
          ports:
            - "8080:80"
          restart: always

  - path: /usr/local/bin/provision-web-vuln.sh
    permissions: '0755'
    content: |
      #!/usr/bin/env bash
      set -euo pipefail
      systemctl enable --now docker || true
      mkdir -p /opt/vuln
      cd /opt/vuln
      cat > docker-compose.yml <<'EOF'
      version: '3'
      services:
        dvwa:
          image: vulnerables/web-dvwa
          ports:
            - "80:80"
          restart: always
        bwapp:
          image: raesene/bwapp
          ports:
            - "8080:80"
          restart: always
      EOF
      docker-compose up -d || true
      echo "DVWA and bWAPP started"

runcmd:
  - [ sh, -c, "/usr/local/bin/provision-web-vuln.sh >> /var/log/provision.log 2>&1 || true" ]
  - [ sh, -c, "echo 'Provisioning complete for web-vuln-php' >> /var/log/provision.log" ]


EOF
)


yaml_files["${machines[3]}"]=$(cat << EOF 
#cloud-config
hostname: juice-shop
