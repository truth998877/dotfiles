yaml_files["${machines[11]}"]=$(cat << EOF 
#cloud-config
hostname: tri-nic
ssh_pwauth: True
users:
  - name: "$username"
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    shell: /bin/bash
    lock_passwd: locked
    passwd: $6$MNmwwbta3cIHy23B$mZ.iRwDt5gFPeKjW4Pypjis8RfO/TBRVGXgLnETN.KGY4g2lkxaqcENESWFyUEBT9iCuemr38qlGBZkjo1U21/
    ssh_authorized_keys:
      - "$sshkey"

runcmd:
  - passwd -u "$username"              # unlock the account
  - echo "tony:MyConsolePass" | chpasswd


EOF
)

img_dir="/var/lib/libvirt/images"
index=11

#if $HOME/buglab/cloudinit does not exist create it
if [ ! -d $HOME/buglab/cloudinit ]; then
  mkdir -p $HOME/buglab/cloudinit
fi

#for each machine in the list of machines
#for machine in "${machines[@]}";do
for machine in "${machines[11]}";do

  #create seed iso
	cd $HOME/buglab/cloudinit

  #write and delete yml files
	#echo "${yaml_files["$machine"]}"
	echo "${yaml_files["$machine"]}" > "$machine.yml"
  cloud-localds -d qcow2 "$machine"-seed.iso "$machine.yml"
	rm "$machine.yml"

	cd -

  #set appropriate options for each machine, TODO - remove the else
	if [[ "$index" == 0 ]]; then
    #if kali machine use these options
    image="$HOME/buglab/images/disk.raw"
		variant="debianwheezy"
		format=raw
	else
    image="$HOME/buglab/images/ubuntu-24.04-server-cloudimg-amd64.img"
		variant="ubuntuquantal"
		format=qcow2
	fi
	
  #create backing file
  sudo qemu-img create -f qcow2 -b "$image" -F "$format" \
          "$img_dir"/"$machine".qcow2 "${discsizes[$index]}"G
  
  ip=$(($index+10))
	
	#create machine
  sudo virt-install \
  --name $machine \
  --memory "${ramsizes[$index]}" \
  --vcpus "${numcpus[$index]}" \
  --disk path="$img_dir"/"$machine".qcow2,format=qcow2 \
  --disk path="$HOME"/buglab/cloudinit/"$machine"-seed.iso,device=cdrom \
	--os-type linux \
  --os-variant "$variant" \
	--boot "${boottype[$index]}" \
  --network network=labnet,mac=52:54:00:ab:cd:"$ip" \
  --import \
  --graphics none \
  --noautoconsole

	 
  if [[ $index == 0 ]] || [[ $index == 11 ]]; then
    echo here 0
    # if kali machine add second nic and attach to attacker net
    sudo virsh attach-interface \
    --domain "$machine" \
    --type network \
    --source attackernet \
		--mac 52:54:00:aa:bb:"$ip" \
    --model virtio \
    --config --live
		echo here 1
    
    #add reserved ip address for kali machine to attackernet
		sudo virsh net-update attackernet add ip-dhcp-host \
    "<host mac='52:54:00:aa:bb:"$ip"' name='"$machine"' ip='192.168.50."$ip"'/>" \
    --live --config
		echo here 2
	 fi

	 if [[ $index == 11 ]]; then
    echo here b
    sudo virsh attach-interface \
    --domain "$machine" \
    --type bridge \
		--source br0 \
		--mac 52:54:00:aa:cc:"$ip" \
    --model virtio \
    --config --live
  fi	
	
  #add reserved ip address to labnet for machine
  sudo virsh net-update labnet add ip-dhcp-host \
  "<host mac='52:54:00:ab:cd:"$ip"' name='"$machine"' ip='192.168.60.$ip'/>" \
  --live --config
  #--network network=labnet,mac=52:54:00:ab:cd:"$ip" \
	((index++))

done
