#######################twitch functions###############

wee () {
    declare buf="$*"
    if [ ! -p ~/.weechat/weechat_fifo ]; then
        echo "WeeChat not running?" >&2
        return 1
    fi  
    if [ -n "$buf" ]; then
        echo "*$buf"  > ~/.weechat/weechat_fifo
        return 0
    fi  
    while IFS= read -r line; do
        echo "*$line" > ~/.weechat/weechat_fifo
    done
}

slash () {
    declare cmd="$1"
    shift 2>/dev/null
    wee "/msg $currentstreamer /$cmd $*"
}

