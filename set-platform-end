case $HOSTNAME in

   earth|jupiter|saturn|alpha|beta|gamma|oldvenus|kali|titan|thinkpad|squid|sedna|makemake)
   PLATFORM=debian
   ;;

   moon)
   PLATFORM=manjaro
   ;;

   moonbaby)
   PLATFORM=postmarketos
   ;;

   macbook.local|macbook)
   PLATFORM=darwin
   ;;

   pluto)
   PLATFORM=freebsd
   ;;

   *)
   PLATFORM=debian

esac

case $HOSTNAME in

  #set a virtual debian system's hostname to "frontendtest" to test frontend setup
  earth|saturn|moon|moonbaby|macbook.local|frontendtest|kali|thinkpad)
  END=front
  ;;

  venus|oldvenus|jupiter|pluto|alpha|beta|gamma|squid|titan|makemake)
  END=back
  ;;

  *)
  END=back
  unamestr="$(uname -sr)"
  if [[ $unamestr == CYGWIN* || $unamestr == MINGW* || $unamestr == MINGW32* || $unamestr == MSYS* || $HOSTNAME == work ]]; then
		END=work
		PLATFORM=work
  fi
  ;;

esac

export PLATFORM
export END 
